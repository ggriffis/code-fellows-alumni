<%= form_for [@user, @inquiry], :html => {:class => 'form-inline'} do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <p>
    <div>
      <%= f.label :name, "Your name" %><br/>
      <%= f.text_field :name %>
    </div>

    <div>
      <%= f.label :email, "Your email address" %><br/>
      <%= f.text_field :email %>
    </div>

    <div>
      <%= f.label :message %><br/>
      <%= f.text_area :message %>
    </div>
  </p>
  <div>
    <%= f.submit "Send" %>
  </div>
<% end %>
