<h2>View All Code Fellows Alumni Profiles</h2>
<table class="table table-striped table-bordered">
  <thead>
    <th>Name</th>
    <th>Email</th>
    <th>Phone Number</th>
    <th>Abbreviated Intro</th>
    <th>Abbreviated Skills</th>
    <th>Project sample</th>
   </thead>
   <tbody>
     <% @users.each do |user| %>
       <tr>
         <td><%= link_to user.full_name.to_s, user %>
         <td><%= user.email %></td>
         <td><%= user.phone_number %></td>
         <td><%= user.introduction.to_s.truncate(40, :separator => ' ', :omission => "...") %></td>
         <td><%= user.skills.to_s.truncate(40, :separator => ' ', :omission => '...') %></td>
         <%= random_project = user.random_project %>
         <% if !random_project.nil? %>
          <td><%= link_to user.random_project.title, random_project %></td>
         <% else %>
          <td>Coming soon!<td>
         <% end %>
       </tr>
     <% end %>
   </tbody>
</table>
