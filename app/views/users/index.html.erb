<% if user_signed_in? %>
    <div class="signed_in">
      <p style="color:#555; line-height:16px; margin:0px;">Signed in as <%= current_user.email %></p>
    </div>
<% end %>
<div class="container">
  <h2>View All Code Fellows Alumni Profiles</h2>
  <div class="row">
    <div class="span12">
      <table class="table table-striped table-bordered">
        <thead>
          <th>Picture</th>
          <th>Name</th>
          <th>Email</th>
          <th>Phone Number</th>
          <th>Abbreviated Intro</th>
          <th>Abbreviated Skills</th>
          <th>Project sample</th>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= link_to (image_tag user.avatar.url(:thumb)), user %></td>
              <td><%= link_to user.full_name.to_s, user %>
              <td><%= user.email %></td>
              <td><%= user.phone_number %></td>
              <td><%= user.introduction.to_s.truncate(40, :separator => ' ', :omission => "...") %></td>
              <td><%= user.skills.to_s.truncate(40, :separator => ' ', :omission => '...') %></td>
              <% a_random_project = user.random_project %>
              <% if !a_random_project.nil? %>
                <td><%= link_to a_random_project.title, a_random_project %></td>
              <% else %>
                <td>Coming soon!</td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
