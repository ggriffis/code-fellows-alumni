<div class="container_inner">
  <% if user_signed_in? %>
    <div class="signed_in">
      <p style="color:#555; line-height:16px; margin:0px;"><%= t "application.signed_in_as" %> <%= current_user.email %></p>
    </div>
  <% end %>
  <%= link_to (t "application.back"), :back %>
  <% if current_user == @user %>
  | <%= link_to "Edit Profile", edit_user_path(@user) %>
  <% end %>
  <h2><%= @user.full_name %></h2>
  <%= " " + @user.email%>
  <% if @user.phone_number.present? %>
     | <%= @user.phone_number %>
  <% end %>
  <% if @user.twitter_handle.present? %>
     | @<%= link_to @user.twitter_handle, "https://twitter.com/" + @user.twitter_handle, target: '_blank' %>
  <% end %>
  <% if @user.display_address.present? %>
   | <%= " " + @user.display_address + " " %>
  <% end %>
  <% if current_user == @user %>
    <% if @user.display_address.present? %>
      <%= link_to "Change address", edit_address_path(@user.address) %>
    <% else %>
      </br><%= link_to "Add address", new_address_path %>
    <% end %>
  <% else %>
    <%= link_to "Contact me", new_user_inquiry_path(@user) %>
  <% end %><br><br>

</br>
  <div class="row">
    <div class="span4">
      <%= image_tag @user.avatar.url(:medium) %>
    </div>
    <div class="span8" style="float:left;">
      <p>
        <h2>What am I about?</h2>
        <%= @user.introduction %>
      </p>
    </div>
  </div>
</br>
  <div class="row">
    <div class="span4">
      <p>
        <h2>Skills:</h2>
        <%= @user.skills %>
      </p>
    </div>
    <div class="span4">
      <p>
        <h2>What is my dream job?</h2>
        <%= @user.desired_job_situation %>
      </p>
    </div>

    <div class="span4">
      <p>
        <h2>Where is my dream job?</h2>
        <%= @user.desired_job_location %>
      </p>
    </div>
  </div><br><br>

  <div class="row">
    <div class="span8">
      <p>
        <h2>Contact/networking/reference/useful links:</h2>
        <% if current_user == @user %>
          <%= link_to "Add link", new_user_link_path(@user), id: "new_user_link", remote: true %>
        <% end %>
      </p>
      <%= render "links/links_form" %>
    </div>
    <div class="span4">
      <p>
        <h2>Projects</h2>
        <% if current_user == @user %>
          <%= link_to "Add project", new_project_path %>
        <% end %>
      </p>
      <table class="table table-striped table-bordered">
        <thead>
          <th>Title</th>
         </thead>
         <tbody>
           <% @user.projects.each do |p| %>
             <tr>
               <td><%= link_to p.title, project_path(p) %></td>
               <% if current_user == @user %>
                 <td><%= link_to 'Edit', edit_project_path(p) %></td>
                 <td><%= link_to 'Delete', p, method: :delete, data: { confirm: 'Are you sure?' } %></td>
               <% end %>
             </tr>
           <% end %>
         </tbody>
      </table>
    </div>

    <div class="span12">
      <p>
        <h2>Videos</h2>
        <% if current_user == @user %>
          <%= link_to "Add video", new_video_path, id: "new_video", remote: true %>
        <% end %>
      </p>
      <div id="video_url">
        <% @user.videos.take(2).each do |video| %>
          <p><%= link_to video.title, video %></p>
          <p><%= video.description %></p>
          <p><a href="<%= video.video_link %>"></a></p>
          <% if current_user == @user %>
            <%= link_to 'Edit', edit_video_path %> |
            <%= link_to 'Delete', p, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        <% end %>
        </br>
        <%= link_to "View All", videos_path %>
      </div>
    </div>
  </div>
</div>
