<div class="container_inner">
  <% if user_signed_in? %>
    <div class="signed_in">
      <p style="color:#555; line-height:16px; margin:0px;">Signed in as <%= current_user.email %></p>
    </div>
  <% end %>
  <%= link_to "Back", :back %>
  <% if current_user == @user %>
  | <%= link_to "Edit Profile", edit_user_path(@user) %>
  <% end %>
  <h2><%= @user.full_name %></h2>
  <%= " " + @user.email%> |
  <%= @user.phone_number %><br><br>

</br>
  <div class="row">
    <div class="span4">
      <%= image_tag @user.avatar.url(:medium) %>
    </div>
    <div class="span8" style="float:left;">
      <p>
        <h2>What am I about?</h2>
        <%= @user.introduction %>
      </p>
    </div>
  </div>
</br>
  <div class="row">
    <div class="span4">
      <p>
        <h2>Skills:</h2>
        <%= @user.skills %>
      </p>
    </div>
    <div class="span4">
      <p>
        <h2>What is my dream job?</h2>
        <%= @user.desired_job_situation %>
      </p>
    </div>

    <div class="span4">
      <p>
        <h2>Where is my dream job?</h2>
        <%= @user.desired_job_location %>
      </p>
    </div>
  </div><br><br>

  <div class="row">
    <div class="span8">
      <p>
        <b>Contact/networking/reference/useful links: </b>&nbsp;&nbsp;
        <% if current_user == @user %>
          <%= link_to "Add link", new_user_link_path(@user) %>
        <% end %>
      </p>
      <%= render "links/links_form" %>
    </div>
    <div class="span4"
      <p>
        <b>Projects </b>&nbsp;&nbsp;
        <% if current_user == @user %>
          <%= link_to "Add project", new_project_path %>
        <% end %>
      </p>
      <table class="table table-striped table-bordered">
        <thead>
          <th>Title</th>
         </thead>
         <tbody>
           <% @user.projects.each do |p| %>
             <tr>
               <td><%= link_to p.title, project_path(p) %></td>
               <% if current_user == @user %>
                 <td><%= link_to 'Edit', edit_project_path(p) %></td>
                 <td><%= link_to 'Delete', p, method: :delete, data: { confirm: 'Are you sure?' } %></td>
               <% end %>
             </tr>
           <% end %>
         </tbody>
      </table>
    </div>
  </div>
</div>
