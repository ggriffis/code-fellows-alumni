<div class="container">
<div id='user'>
  <h2><%= @user.full_name %></h2>
  <p>
    <b>Email:</b>
    <%= @user.email %>
  </p>

  <p>
    <b>Phone number:</b>
    <%= @user.phone_number %>
  </p>

  <p>
    <b>What am I about?</b>
    <%= @user.introduction %>
  </p>

  <p>
    <b>Skills:</b>
    <%= @user.skills %>
  </p>

  <p>
    <b>What is my dream job?</b>
    <%= @user.desired_job_situation %>
  </p>

  <p>
    <b>Where is my dream job?</b>
    <%= @user.desired_job_location %>
  </p>

  <p>
    <b>Contact and reference links:</b>
  </p>
</div>

 <div class="row">
    <div class="span6">
      <%= render "links/links_form" %>
    </div>

    <div class="span6"
      <ul id='projects'>
        <% @user.projects.each do |project| %>
          <li>
            #<%= project.id %> -
            <%= link_to project.title, @project %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
