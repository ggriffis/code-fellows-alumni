<div class="container">
<div id='user'>
  <h2><%= @user.full_name %></h2>
    <%= link_to "Edit Profile", edit_user_path(@user) %>
  <p>
    <b>Email:</b>
    <%= @user.email %>
  </p>

  <p>
    <b>Phone number:</b>
    <%= @user.phone_number %>
  </p>

  <div class="modal-body">
    <p>
      <b>What am I about?</b>
      <%= @user.introduction %>
    </p>

    <p>
      <b>Skills:</b>
      <%= @user.skills %>
    </p>

    <p>
      <b>What is my dream job?</b>
      <%= @user.desired_job_situation %>
    </p>

    <p>
      <b>Where is my dream job?</b>
      <%= @user.desired_job_location %>
    </p>
  </div>
</div>

 <div class="row">
    <div class="span6">
      <p>
        <b>Contact/networking/reference/useful links: </b>
        <%= link_to "Add link", new_user_link_path(@user) %>
      </p>
      <%= render "links/links_form" %>
    </div>
    <div class="span6"
      <p>
        <b>Projects </b>
        <%= link_to "Add project", new_project_path %>
      </p>
      <table class="table table-striped table-bordered">
        <thead>
          <th>Title</th>
          <th>Description</th>
         </thead>
         <tbody>
           <% @user.projects.each do |p| %>
             <tr>
               <td><%= link_to p.title, project_path(p) %></td>
               <td><%= p.description %></td>
             </tr>
           <% end %>
         </tbody>
      </table>
    </div>
  </div>
</div>
