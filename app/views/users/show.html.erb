<div class="container">
<div id='user'>
  <h2><%= @user.full_name %></h2>
    <%= link_to "Edit Profile", edit_user_path(@user) %>
  <p>
    <b>Email:</b>
    <%= @user.email %>
  </p>

  <p>
    <b>Phone number:</b>
    <%= @user.phone_number %>
  </p>

  <div class="modal-body">
    <p>
      <b>What am I about?</b>
      <%= @user.introduction %>
    </p>

    <p>
      <b>Skills:</b>
      <%= @user.skills %>
    </p>

    <p>
      <b>What is my dream job?</b>
      <%= @user.desired_job_situation %>
    </p>

    <p>
      <b>Where is my dream job?</b>
      <%= @user.desired_job_location %>
    </p>
  </div>

  <p>
    <b>Contact/networking/reference/useful links: </b>
    <%= link_to "Add link", new_user_link_path(@user) %>
  </p>
</div>

 <div class="row">
    <div class="span6">
      <%= render "links/links_form" %>
    </div>

    <div class="span6"
      <ul id='projects'>
        <% @user.projects.each do |project| %>
          <li>
            #<%= project.id %> -
            <%= link_to project.title, @project %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
