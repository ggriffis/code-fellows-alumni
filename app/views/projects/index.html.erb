<div class="container_inner">
  <% if user_signed_in? %>
    <div class="signed_in">
      <p style="color:#555; line-height:16px; margin:0px;"><%= t "application.signed_in_as" %> <%= current_user.email %></p>
    </div>
  <% end %>

  <%= link_to "Back", :back %>
  <h2>My Projects</h2>

  <p>
    <%= link_to "Add project", new_project_path %>
  </p>
  <table class="table table-striped table-bordered">
    <thead>
      <th>Image</th>
      <th>Title</th>
      <th>Description</th>
    </thead>
    <tbody>
      <% @projects.each do |p| %>
        <tr>
          <td><%= link_to (image_tag p.attach.url(:thumb)), p %></td>
          <td class="project_title_column"><%= link_to p.title, project_path(p) %></td>
          <td><%= link_to p.description, project_path(p) %></td>
          <% if current_user == @user %>
            <td><%= link_to 'Edit', edit_project_path(p) %></td>
            <td><%= link_to 'Delete', p, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
