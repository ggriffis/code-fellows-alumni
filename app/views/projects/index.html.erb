  <% if user_signed_in? %>
    <div class="signed_in">
      <p style="color:#555; line-height:16px; margin:0px;">Signed in as <%= current_user.email %></p>
    </div>
  <% end %>
<div class="container">
  <%= link_to "Back", :back %>
  <h2>My Projects</h2>

  <p>
    <% if current_user == @user %>
      <%= link_to "Add project", new_project_path %>
    <% end %>
  </p>
  <table class="table table-striped table-bordered">
    <thead>
      <th>Title</th>
      <th>Description</th>
    </thead>
    <tbody>
      <% @projects.each do |p| %>
        <tr>
          <td class="project_title_column"><%= link_to p.title, project_path(p) %></td>
          <td><%= link_to p.description, project_path(p) %></td>
          <% if current_user == @user %>
            <td><%= link_to 'Edit', edit_project_path(p) %></td>
            <td><%= link_to 'Delete', p, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
